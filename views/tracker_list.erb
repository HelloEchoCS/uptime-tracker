<div class="pure-u-1">
  <h2>List</h2>
</div>

<div class="pure-u-1">
  <div class="tracker-list pure-g">
    <% @all_trackers.each do |tuple| %>
    <div class="pure-u-1">
      <div class="tracker">
        <div class="pure-g">
          <div class="pure-u-1-24">
            <span id="percentage-<%== convert_sql_tf(tuple['tracker_status']).downcase %>" class="pills">
              <%== "#{tuple['percentage']}%" %>
            </span>
          </div>
          <div class="pure-u-1-5">
            <%== tuple['name'] %>
            <span class="pills"><%== tuple['tracker_type'] %></span>
          </div>
          <div class="pure-u-1-24">
            <%== convert_sql_tf(tuple['tracker_status']) %>
          </div>
          <div class="pure-u-1-5">
            <a href="/edit/<%== tuple['id'] %>">
              <span class="material-symbols-outlined">tune</span>
            </a>
            <form method="post" action="/delete/<%== tuple['id'] %>" class="inline">
              <button type="submit" class="link-button">
              <span class="material-symbols-outlined">delete</span>
              </button>
            </form>
            <form method="post" action="/<%== determine_run_pause(tuple['run_status']) %>/<%== tuple['id'] %>" class="inline">
              <button type="submit" class="link-button">
              <span class="material-symbols-outlined">
                <% if tuple['run_status'] == 'run' %>
                  <%== 'pause' %>
                <% else %>
                  <%== 'play_arrow' %>
                <% end %>
              </span>
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>

<div class="pure-u-1">
  <div class="new-tracker-button">
    <a class="pure-button pure-button-primary" href="/add">New Tracker</a>
  </div>
</div>

